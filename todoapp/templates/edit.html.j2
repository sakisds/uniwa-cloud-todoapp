{% extends 'base.html.j2' %}
{% block head %}
<title>TODO App - Edit task</title>
{% endblock %}
{% block body %}
<div class="container">
  <h1>ToDo App</h1>
  <h2>Edit task</h2>

  <div id="todo-list">
    <form id="add-todo-form" action="/edit/{{task.id}}" method="POST">
      <input class="input-field" type="text" name="content" id="content" value="{{task.content}}">
      <input class="button-primary" type="submit" value="Update">
    </form>
  </div>

  <div id="footer">
    <p>UNIWA - Department of Electrical and Electronic Engineering - Cloud Computing Class</p>
    <p>Author: Thanasis Georgiou - ee06664 (at) uniwa.gr</p>
    <p><a target="_blank" href="https://icons8.com/icons/set/--checkmark-yes">Checkmark Yes icon</a> icon by <a target="_blank" href="https://icons8.com">Icons8</a></p>
  </div>

</div>
{% endblock %}